<%- include("partials/header"); -%>

<h1 class = "heading">Edit the Post</h1>

<form class="" action="/edit/<%= _id %>" method="post">
  <div class="form-group">
    <label class="title">Title</label>
    <input type="text" value = "<%= title %>" class="form-control" name="postTitle">
    <label class="content">Post</label>
    <textarea class="form-control" rows="5" col="30" name="postBody"><%= content %></textarea>
  </div>
  <button type="submit" class="mybtn btn btn-primary">Save Changes</button>
</form>

<%- include("partials/footer"); -%>
